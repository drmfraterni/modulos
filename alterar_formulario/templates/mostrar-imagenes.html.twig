{% set cantImg = galeria.ImagUrl|length - 1 %}

<div id="resumen-galeria" class="container">
	<h1 class="text-center my-4">GALERIA DE IMÁGENES<br/>COLECCIONES</h1>

	{# INICIO DEL FORMULARIO FILTRO #}

	<div id="formFiltro" class="formulario-filtro my-5">

		<form id="{{ formulario['#id']}}" method="{{ formulario['#method'] }}">
			<div class="row filtroForm">
				<div class="col-12 col-md-4 campoFiltro" >{{ formulario.titulo }}</div>
				<div class="col-12 col-md-4 campoFiltro" >{{ formulario.mes }}</div>
				<div class="col-12 col-md-4 campoFiltro" >{{ formulario.annio}}</div>					
				<div class="col-12">
					<div class="col-12 col-md-2 boton-enviar">{{ formulario.submit }}</div>
				</div>

				{{formulario.form_build_id }}
				{{formulario.form_token }}
				{{formulario.form_id }}
				
			</div>
		</form>
	</div>
	{# FIN del formulario de FILTRO #}
</div>

{# Datos de la COLECCIÓN #}	

<div class="colc-tit">
	<div class="text-center my-4"><h2>{{ galeria.titulo }}</h2></div>
	<div class="fechas text-center mb-4">{{galeria.mes}} {{ galeria.annio }}</div>

</div>


{# FIN datos de la colección #}






<div id="carouselGalImg" class="carousel carousel-galeria slide" data-ride="carousel">
  <div class="carousel-inner">
  	{% for i in 0..cantImg %}
  		{% if i == 0 %}
  			<div class="carousel-item active">
      			<img class="d-block w-100" src="{{ galeria.urlBase ~ '/sites/default/files' ~ galeria.ImagUrl[i] }}" alt="First slide">
    		</div>
    	{% else %}
    		<div class="carousel-item">
      			<img class="d-block w-100" src="{{ galeria.urlBase ~ '/sites/default/files' ~ galeria.ImagUrl[i] }}" alt="Second slide">
    		</div>
  		{% endif %}
  	{% endfor %}
  </div>
  <a class="carousel-control-prev" href="#carouselGalImg" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselGalImg" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<div class="btn-volver text-center p-4"><a class="btn btn-primary" href="{{ galeria.urlBase }}/galeria-imagenes" role="button">Volver a las Colecciones</a></div>


