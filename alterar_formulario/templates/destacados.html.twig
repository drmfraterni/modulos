{% set baseUrl = convocatorias.urlAmbito ~ "/sites/default/files" %}



<div class="container mb-2 col-12">


    <div id="magicCarousel" class="carousel slide" data-ride="carousel">
      {# <div class="col-12 col-md-12 p-3 dest-general"><h3 class="tit-destacados">DESTACADOS</h3></div> #}
<!--    Carousel Indicators    -->
      <ol class="carousel-indicators">
        <li data-target="#magicCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#magicCarousel" data-slide-to="1"></li>
        <li data-target="#magicCarousel" data-slide-to="2"></li>
      </ol>

<!--    Carousel Slider    -->
      <div class="carousel-inner" role="listbox">
        <div class="carousel-item active">
          <a href="{{ convocatorias.urlNode[0] }}"><img src="{{ baseUrl }}{{ convocatorias.imagen.url[0] }}" class="d-block w-100"></a>
          <div class="carousel-caption">
            <h3>{{ convocatorias.titulo[0] }}</h3>
          </div>
        </div>

        <div class="carousel-item">
          <a href="{{ convocatorias.urlNode[1] }}"><img src="{{ baseUrl }}{{ convocatorias.imagen.url[1] }}" class="d-block w-100"></a>
          <div class="carousel-caption">
            <h3>{{ convocatorias.titulo[1] }}</h3>
          </div>
        </div>

        <div class="carousel-item">
          <a href="{{ convocatorias.urlNode[2] }}"><img src="{{ baseUrl }}{{ convocatorias.imagen.url[2] }}" class="d-block w-100"></a>
          <div class="carousel-caption">
            <h3>{{ convocatorias.titulo[2] }}</h3>
          </div>
        </div>


<!--     Carousel Controls     -->
        <a href="#magicCarousel" class="carousel-control-prev" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a href="#magicCarousel" class="carousel-control-next" role="button" data-slide="next">
          <span class="carousel-control-next-icon"></span>
          <span class="sr-only">Next</span>
        </a>


      </div>
      <div class="mas-img"><a class="mensaje" href="{{rutaCompleta}}/portal/todas-noticias" data-toogle="tooltip" data-placement="top" title="Más imágenes"><h1>+</h1></a></div>

      </div>
</div>


